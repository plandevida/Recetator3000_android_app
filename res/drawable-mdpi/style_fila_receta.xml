<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/gris_oscuro" />
      <stroke
          android:width="1dp"
          android:color="@color/negro" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="@dimen/margin_peque"
          android:top="@dimen/margin_peque"
          android:right="@dimen/margin_peque"
          android:bottom="@dimen/margin_peque" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/gris_oscuro"
          android:endColor="@color/negro"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/negro" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="@dimen/margin_peque"
          android:top="@dimen/margin_peque"
          android:right="@dimen/margin_peque"
          android:bottom="@dimen/margin_peque" />
    </shape>
  </item>
</selector>
