<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/lila" />
      <stroke
          android:width="1dp"
          android:color="@color/morado" />
      <corners
          android:radius="@dimen/margin_medio" />
      <padding
          android:left="@dimen/margin_medio"
          android:top="@dimen/margin_peque"
          android:right="@dimen/margin_medio"
          android:bottom="@dimen/margin_peque" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/lila"
          android:endColor="@color/morado"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/morado" />
      <corners
          android:radius="@dimen/margin_grande" />
      <padding
          android:left="@dimen/margin_medio"
          android:top="@dimen/margin_peque"
          android:right="@dimen/margin_medio"
          android:bottom="@dimen/margin_peque" />
    </shape>
  </item>

</selector>
